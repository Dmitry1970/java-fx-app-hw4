<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.javafxapphw4.Controller">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

   <TextArea fx:id="historyArea" editable="false" VBox.vgrow="ALWAYS"/>
   <HBox spacing="5">
       <TextField fx:id="msgField" HBox.hgrow="ALWAYS" promptText="Введите сообщение..."/>
       <Button text="Отпр." defaultButton="true" onAction="#clickCheckButton"/>
   </HBox>
</VBox>
